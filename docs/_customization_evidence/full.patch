+    { 3, 0, GAMEPAD_MASK_A2 },
+    { 1, 1, GAMEPAD_MASK_DU },
+    { 3, 1, GAMEPAD_MASK_B3 },
+    { 4, 1, GAMEPAD_MASK_B4 },
+    { 5, 1, GAMEPAD_MASK_R1 },
+    { 6, 1, GAMEPAD_MASK_L1 },
+    { 0, 2, GAMEPAD_MASK_DL },
+    { 2, 2, GAMEPAD_MASK_DR },
+    { 3, 2, GAMEPAD_MASK_B1 },
+    { 4, 2, GAMEPAD_MASK_B2 },
+    { 5, 2, GAMEPAD_MASK_R2 },
+    { 6, 2, GAMEPAD_MASK_L2 },
+    { 1, 3, GAMEPAD_MASK_DD },
+    { 3, 3, GAMEPAD_MASK_L3 },
+    { 4, 3, GAMEPAD_MASK_R3 },
